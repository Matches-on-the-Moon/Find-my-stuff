<?xml version="1.0" encoding="utf-8"?>

<!-- This layout will eventually be used for the scrollable/infinite loading item list -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">	

    <!--  Hold search bar and add item button -->
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:weightSum="3" >
        
		<!-- The search bar-->
	
	    <SearchView
			android:layout_width="250dp"
			android:layout_height="match_parent"
			android:inputType="text" >
		</SearchView>
    	
		<!--  Sets up the add item button -->  
	    
	    <Button
	        android:id="@+id/addItemButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal|top"
	        android:onClick="addItemButtonPressed"
	        android:text="@string/addItem" />
	    	
	</LinearLayout>
    
    <ListView
	 	android:id="@id/android:list"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:fastScrollEnabled="true"
	 	android:drawSelectorOnTop="false" />

    <TextView
        android:id="@id/android:empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/loadingData" />

</LinearLayout>